<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href="#" class="navbar-brand mx-auto">NEWS</a>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-6 mt-4 text-center">
                <table class="table table-stripped">
                    <tr>
                        <th>ID</th>
                        <th>TITLE</th>
                        <th>NEWS</th>
                    </tr>
                    <% for(var i = 0; i < news.length; i++) { %> 
                        <tr>
                            <td><%= news[i].id_news %></td>
                            <td><%= news[i].title %></td>
                            <td><%= news[i].news %></td>
                        </tr>
                    <% } %>
                </table>
            </div>
            <div class="col-md-6 mt-4 card">
                <form action="/news" method="post" class="card-body">
                    <h3 class="card-title">Add News</h3>
                    <div class="form-group">
                        <input type="text" name="title" class="form-control mb-2"
                        placeholder="Title..." autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name="news" class="form-control mb-2"
                        placeholder="Content...">
                    </div>
                    <div class="from-group">
                        <input type="submit" class="btn btn-primary mb-4">
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>